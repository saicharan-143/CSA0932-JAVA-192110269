import java.util.*;
public class Main
{
	public static void main(String[] args) 
	{
	    int n,i,j;
	    Scanner sc=new Scanner(System.in);
		System.out.print("N: ");
		n=sc.nextInt();
		for(i=0;i<n+1;i++)
		{
		    for(j=0;j<i;j++)
		    {
		        System.out.print("*");
		    }
		    System.out.println();
		}
	}
}
